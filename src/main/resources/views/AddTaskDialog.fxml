<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="277.0" styleClass="anchor-pane" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AddTaskController">

    <VBox layoutX="32.0" layoutY="52.0" prefHeight="296.0" prefWidth="212.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
        <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Add New Task" textFill="WHITE" />
        <TextField fx:id="taskTitle" promptText="Task Title" />
        <TextField fx:id="taskDescription" promptText="Task Description" />
        <TextField fx:id="taskTimestamp" promptText="Timestamp (e.g., 2023-10-01 10:00 AM)" />
        <TextField fx:id="taskPriority" promptText="Priority (e.g., High, Medium, Low)" />
        <TextField fx:id="taskStatus" promptText="Status (e.g., In Progress, Completed)" />
        <Button onAction="#saveTask" styleClass="btn-primary" text="Save Task" />
    </VBox>

</AnchorPane>
