<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="300.0" styleClass="anchor-pane" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EditTaskController">

    <VBox layoutX="32.0" layoutY="52.0" prefHeight="350.0" prefWidth="240.0" spacing="10">
        <Label contentDisplay="CENTER" prefHeight="16.0" prefWidth="204.0" style="-fx-font-weight: bold; -fx-font-size: 14;" text="Edit Task" textFill="WHITE">
            <font>
                <Font size="19.0" />
            </font>
        </Label>
        <TextField fx:id="taskTitle" promptText="Task Title" />
        <TextField fx:id="taskDescription" promptText="Task Description" />

        <!-- Start Date and Time -->
        <DatePicker fx:id="startDate" prefHeight="35.0" prefWidth="239.0" promptText="Start Date" />
        <ChoiceBox fx:id="startTime" prefHeight="26.0" prefWidth="243.0" styleClass="cell" stylesheets="@../styles/style.css" />

        <!-- End Date and Time -->
        <DatePicker fx:id="endDate" prefHeight="35.0" prefWidth="248.0" promptText="End Date" />
        <ChoiceBox fx:id="endTime" prefHeight="26.0" prefWidth="245.0" styleClass="arrow" />

        <!-- ChoiceBox for Priority -->
        <ChoiceBox fx:id="taskPriority" prefHeight="26.0" prefWidth="250.0" />

        <!-- ChoiceBox for Status -->
        <ChoiceBox fx:id="taskStatus" prefHeight="26.0" prefWidth="248.0" />

        <!-- Update Button -->
        <Button fx:id="saveButton" onAction="#handleSave" styleClass="btn-primary" text="Update Task" textFill="WHITE" />
    </VBox>

</AnchorPane>
